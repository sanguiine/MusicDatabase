@model MusicDB.Models.User

<section class="p-0 m-0 bgcolor w-100">
    <div class="container py-5 px-0">
        <h1 class="display-5 mx-2 text-center text-white">Ustawienia</h1>
        <div class="maxw bg-dark text-light rounded mx-auto p-5 text-center my-5">

            @using (Html.BeginForm("AvatarSettings", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <form class="pt-3 pb-5 px-3">
                    <p class="subtitle">Avatar</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger small" })
                    @Html.HiddenFor(model => model.UserID)
                    @Html.HiddenFor(model => model.Password)
                    @Html.HiddenFor(model => model.Type)
                    @Html.HiddenFor(model => model.Name)
                    @Html.HiddenFor(model => model.Email)
                    @Html.HiddenFor(model => model.Birthdate)

                    <div class="mb-3">
                        <input class="form-control clogin-form-file" type="file" name="postedFile" accept=".png, .jpg, .jpeg" id="formFile">
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" name="submitButton" value="AddAvatar" class="btn btn-light subtitle mt-4">Dodaj</button>
                        </div>
                        <div class="col-6">
                            <button type="submit" name="submitButton" value="DeleteAvatar" class="btn btn-light subtitle mt-4">Usuń</button>
                        </div>
                    </div>
                </form>
                <div class="pt-4 small text-success">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</section>