@model MusicDB.Models.Password

<section class="p-0 m-0 bgcolor w-100">
    <div class="container py-5 px-0">
        <h1 class="display-5 mx-2 text-center text-white">Ustawienia</h1>
        <div class="maxw bg-dark text-light rounded mx-auto p-5 text-center my-5">

            @using (Html.BeginForm("PasswordSettings", "Users", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <form class="py-3 pt-5 px-3">
                    <p class="subtitle">Nowe hasło</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger small" })
                    <div class="form-group">
                        <div class="input-group">
                            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control clogin-form pwd", @placeholder = "Hasło", @type = "password" } })
                            <span class="input-group-btn">
                                <button class="btn btn-default reveal reveal-style" type="button"><i class="bi bi-eye-slash" aria-hidden="true"></i></button>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger small" })
                    </div>
                    <button type="submit" value="Edit" class="btn btn-light subtitle mt-5">Aktualizuj</button>
                </form>
                <div class="pt-4 small text-success">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</section>