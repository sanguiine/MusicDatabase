@model MusicDB.Models.User

<section class="p-0 m-0 bgcolor w-100">
    <div class="container py-5 px-0">
        <div class="maxw bg-dark text-light rounded mx-auto p-5 text-center my-5">
            @using (Html.BeginForm("Login", "Users", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <form class="pt-3 pb-5 px-3">
                    <p class="subtitle">Logowanie</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger small m-0 p-0" })
                    <div class="form-group mb-4">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control clogin-form mt-2", @placeholder = "Adres e-mail" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                    </div>
                    <div class="form-group mb-4">
                        <div class="input-group">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control clogin-form pwd", @placeholder = "Hasło", @type = "password" } })
                            <span class="input-group-btn">
                                <button class="btn btn-default reveal reveal-style" type="button"><i class="bi bi-eye-slash" aria-hidden="true"></i></button>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger small" })
                    </div>
                    <button type="submit" class="btn btn-light subtitle mt-4">Zaloguj się</button>
                </form>
                }
                <div class="pt-4 pb-3 small text-danger">
                    @ViewBag.Message
                </div>
                <small class="form-text text-muted">
                    Nie masz konta?
                    @Html.ActionLink("Zarejestruj się", "Register", "Users", new { area = "" }, new { @class = "dlink text-light link-disabled" })
                </small>
        </div>
    </div>
</section>