@model MusicDB.Models.User

<section class="p-0 m-0 bgcolor w-100">
    <div class="container py-5 px-0">
        <h1 class="display-5 mx-2 text-center text-white">Ustawienia</h1>
        <div class="maxw bg-dark text-light rounded mx-auto p-5 text-center my-5">

            @using (Html.BeginForm("DetailsSettings", "Users", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <form class="pt-3 pb-5 px-3">
                    <p class="subtitle">Dane konta</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger small" })
                    @Html.HiddenFor(model => model.UserID)
                    @Html.HiddenFor(model => model.Avatar)
                    @Html.HiddenFor(model => model.Type)
                    @Html.HiddenFor(model => model.Password)

                    <div class="form-group mt-2 mb-4">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control clogin-form", @placeholder = "Adres e-mail" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                        @Html.ValidationMessage("EmailExists", "", new { @class = "text-danger small" })
                    </div>
                    <div class="form-group mt-2 mb-4">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control clogin-form", @placeholder = "Imię" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                    </div>
                    <div class="form-group mt-4">
                        @Html.EditorFor(model => model.Birthdate, new { htmlAttributes = new { @class = "form-control clogin-form", @placeholder = "*Data urodzenia", onfocus = "(this.type='date')" } })
                        @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger small" })
                    </div>
                    <button type="submit" value="Edit" class="btn btn-light subtitle mt-5">Aktualizuj</button>
                </form>
                <div class="pt-4 small text-success">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</section>